<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.ThemeOverlay.AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar" />

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="Base.ThemeOverlay.AppTheme.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="Base.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ActionBar" parent="Base.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.ActionBar</item>
    </style>

    <!-- general text appearance -->
    <style name="TextAppearance.AppTheme.ActionBar" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LineSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lineSeparator</item>
    </style>


    <!--TextView-->

    <style name="TextView">
        <item name="android:textSize">@dimen/default_text_view_size</item>
    </style>

    <style name="TextView.MenuItemHeader" parent="TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.LocationsItemText" parent="TextView">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextView.MenuItemText" parent="TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.MenuItemPriceText" parent="TextView.MenuItemText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!--Edit Texts-->

    <style name="EditText">
    </style>

    <style name="EditText.SignUp" parent="EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
    </style>


    <!--Layout-->
    <style name="Layout">
    </style>

    <style name="Layout.LocationDetailsItem" parent="Layout">
        <item name="android:minHeight">60dp</item>
    </style>


    <!--Buttons-->
    <style name="Button">
    </style>

    <style name="Button.Login" parent="Button">
        <item name="android:minWidth">250dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
