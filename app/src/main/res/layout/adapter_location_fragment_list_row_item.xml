<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <TextView
        android:id="@+id/fragment_locations_list_row_item_name"
        style="@style/TextView.MenuItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="name" />

    <TextView
        android:id="@+id/fragment_locations_list_row_item_address"
        style="@style/TextView.LocationsItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="address" />

    <LinearLayout
        android:id="@+id/fragment_locations_list_row_item_divider"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        style="@style/LineSeparator"/>

</LinearLayout>
