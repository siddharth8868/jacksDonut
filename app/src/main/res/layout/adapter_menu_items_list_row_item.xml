<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_items_list_row_name_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/content_description_item_image"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_items_list_row_name"
            style="@style/TextView.MenuItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/menu_items_list_row_price"
            style="@style/TextView.MenuItemPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$25/doz" />
    </LinearLayout>
</LinearLayout>